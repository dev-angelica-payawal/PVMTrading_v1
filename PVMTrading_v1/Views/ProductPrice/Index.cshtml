@model List<PVMTrading_v1.Models.ProductPrice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
           Product Name
        </th>
        <th>
            Unit Price
        </th>
        <th>
            Selling Price
        </th>
        <th>
           Remarks
        </th>
        <th>
           Date Created
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @item.Product.Name
        <td>
            @item.UnitPrice
        </td>
        <td>
            @item.SellingPrice
        </td>
        <td>
            @item.Remarks
        </td>
        <td>
          @item.DateCreated
        </td>
        <td>
            @Html.ActionLink("Update", "Edit", new { id = item.Id })
        </td>
    </tr>
}

</table>
